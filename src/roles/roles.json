{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "id": "https://raw.githubusercontent.com/eXigentCoder/node-api-seed/master/src/routes/roles/roles.json",
    "name": "role",
    "description": "A role of the user",
    "type": "object",
    "identifierName": "name",
    "properties": {
        "name": {
            "type": "string",
            "minLength": 1,
            "faker": "admin"
        },
        "permissions": {
            "type": "array",
            "minLength": 1,
            "faker": ["edit","view","create","delete"]
        },
        "resources": {
            "type": "array",
            "minLength": 1,
            "faker": ["users","items"]
        }
    },
    "additionalProperties": false,
    "trackHistory": true,
    "required": [
        "name",
        "permissions",
        "resources"
    ],
    "indexes": [
        {
            "name": "name",
            "unique": true,
            "background": true,
            "includeInHistory": true,
            "fields": {
                "name": 1
            }
        }
    ]
}
